{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext", // "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "lib": [
      "dom",
      "es2015",
      "es2017.object"
    ],
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.(spec|test).ts",
    "node_modules"
  ]
}